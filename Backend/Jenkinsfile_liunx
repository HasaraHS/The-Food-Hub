pipeline {
    agent any
    
    stages {
        stage('SCM Checkout') {
            steps {
                retry(3) {
                    git branch: 'main', url: 'https://github.com/prabashwara65/The-Food-Hub'
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t prabashwara65/the-food-hub_backend :${BUILD_NUMBER} .'
            }
        }
        stage('Login to Docker Hub') {
            steps {
                withCredentials([string(credentialsId: 'DockerHub-Password', variable: 'DockerHub-Password')]) {
                    script {  
                        sh "docker login -u prabashwara65 -p '${DockerHub-Password}'"
                    }
                }
            }
        }
        stage('Push Image') {
            steps {
                sh "docker push adomicarts/nodeapp-cuban:${BUILD_NUMBER}"
            }
        }
    }
    post {
        always {
            sh 'docker logout'
        }
    }
}